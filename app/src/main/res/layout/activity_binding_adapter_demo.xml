<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="url"
                type="String"/>
    </data>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.BindingAdapterDemoActivity">


        <ImageView
                android:id="@+id/iv_binding_adapter"
                android:layout_centerInParent="true"
                android:layout_width="300dp" android:layout_height="300dp"
                android:placeHolder="@{@drawable/ic_launcher}"
                android:imageUrl="@{url}"
                android:error="@{@drawable/ic_launcher_round}"
        />

    </RelativeLayout>
</layout>